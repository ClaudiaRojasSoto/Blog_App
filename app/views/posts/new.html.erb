<h1>New Post</h1>

<%= form_with(model: [@user, @post], url: user_posts_create_path(@user)) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Post' %>
  </div>
<% end %>

<%= link_to 'Back', user_posts_path(@user), class: 'button' %>
